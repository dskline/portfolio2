{
  "name": "portfolio2",
  "version": "0.2.0",
  "homepage": "https://spencerkline.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/dskline/portfolio2"
  },
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "prepare": "husky",
    "lint": "biome check",
    "lint:fix": "biome check --write",
    "test": "playwright test",
    "test:smoke": "npm test -- --project=smoke",
    "test:visual": "npm test -- --project=visual*",
    "test:nightly": "npm test -- --project=synthetic-monitoring",
    "test:ci": "npm test -- --project=regression"
  },
  "dependencies": {
    "gray-matter": "4.0.3",
    "next": "15.3.1",
    "next-themes": "0.4.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@next-devtools/core": "0.3.0-beta.1",
    "@playwright/test": "1.52.0",
    "@tailwindcss/postcss": "4.1.4",
    "@types/lodash.set": "^4.3.9",
    "@types/node": "22.14.1",
    "@types/react": "19.1.2",
    "@types/react-dom": "19.1.2",
    "clsx": "2.1.1",
    "husky": "9.1.7",
    "lint-staged": "15.5.1",
    "tailwindcss": "4.1.4",
    "typescript": "5.8.3",
    "zod": "3.24.3"
  },
  "lint-staged": {
    "*": ["sh -c 'npm run test:smoke'"],
    "*.{js,jsx,ts,tsx,json,css}": ["biome check --staged"]
  }
}
